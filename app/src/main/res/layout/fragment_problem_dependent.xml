<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/card_padding_horizontal"
    android:paddingRight="@dimen/card_padding_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dep_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dependent Variable"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_size_title"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_black_24dp"
                android:gravity="right"
                android:id="@+id/dep_info"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:paddingTop="4dp"
                android:tag="info"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:gravity="right"
                android:id="@+id/dep_delete"
                android:background="@color/white"
                android:onClick="removeCard"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/dividerColor"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description of the dependent variable"
        android:id="@+id/dep_descrip"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:textSize="@dimen/text_size_label"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:tag="description"
        android:textColorHint="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dropdown_default"
                android:tag="measure"
                android:layout_marginBottom="-5dp"
                android:drawablePadding="-5dp"
                android:drawableBottom="@drawable/ic_expand_more_black_24dp"
                android:gravity="center"
                android:onClick="chooseMeasure"
                android:id="@+id/dep_value"
                android:textSize="@dimen/text_size_subsensor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dep_sensor"
                android:gravity="center"
                android:textSize="@dimen/text_size_description"
                android:tag="sensor"
                android:text="@string/dropdown_description_default"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/dividerColor"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unit"
                android:tag="symbol"
                android:gravity="center"
                android:id="@+id/dep_unit"
                android:textSize="@dimen/text_size_subsensor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/default_full"
                android:tag="unit"
                android:id="@+id/dep_unit_full"
                android:textSize="@dimen/text_size_description"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>