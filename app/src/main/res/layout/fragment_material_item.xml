<?xml version="1.0" encoding="utf-8"?>
<!--Relationship-->
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/card_padding_horizontal"
    android:paddingRight="@dimen/card_padding_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Material Name"
            android:id="@+id/mat_descrip"
            android:tag="name"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_size_title"
            android:background="@android:color/transparent"
            android:inputType="textCapSentences"
            android:imeOptions="actionDone"
            android:textColorHint="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_black_24dp"
                android:gravity="right"
                android:id="@+id/prob_info"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:paddingTop="4dp"
                android:tag="info"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:gravity="right"
                android:id="@+id/prob_delete"
                android:background="@color/white"
                android:onClick="removeCard"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/dividerColor"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_label"
        android:hint="A description of your material, include: brand, color, size, etc."
        android:background="@android:color/transparent"
        android:inputType="textCapSentences"
        android:scrollHorizontally="false"
        android:lines="3"
        android:tag="description"
        android:imeOptions="actionDone"
        android:textColorHint="@color/colorAccent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_label"
        android:hint="In what way did you use this material?"
        android:background="@android:color/transparent"
        android:inputType="textCapSentences"
        android:scrollHorizontally="false"
        android:lines="3"
        android:tag="purpose"
        android:imeOptions="actionDone"
        android:textColorHint="@color/colorAccent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Quantity Used: "
            android:textSize="@dimen/text_size_label"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:tag="quantity"
            android:textSize="@dimen/text_size_label"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textColorHint="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>